 ################################################################ # THE FOLLOWING IS AN EXPLANATION OF THE GRAMMAR THAT SKHD PARSES. #
# FOR SIMPLE EXAMPLE MAPPINGS LOOK FURTHER DOWN THIS FILE..        #
# ################################################################ #

# float / unfloat window and center on screen
# alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# toggle sticky(+float), picture-in-picture
# alt - p : yabai -m window --toggle sticky --toggle pip

# Apps
cmd - t : open -n -a "Alacritty"
cmd - b : open -n -a "Firefox"
cmd - m : open -a "Telegram"
lcmd + shift - p : open /System/Applications/Utilities/Screenshot.app; sleep 0.2; zsh ~/.ToggleLang.sh 

# Window staff
lcmd - q : yabai -m window --close; sleep 0.2; yabai -m window --focus west; sh ~/.CloseEmptySpaces.sh
lshift - up : yabai -m window --focus north
lshift - down : yabai -m window --focus south
lshift - left : yabai -m window --focus west
lshift - right : yabai -m window --focus east
lcmd + shift - left : yabai -m window --resize left:-10:0; sleep 0.1; zsh ~/.ToggleLang.sh
lcmd + shift - right : yabai -m window --resize right:10:0; sleep 0.1; zsh ~/.ToggleLang.sh
lcmd + shift - up : yabai -m window --resize top:0:-10; sleep 0.1; zsh ~/.ToggleLang.sh
lcmd + shift - down : yabai -m window --resize bottom:0:10; sleep 0.1; zsh ~/.ToggleLang.sh
lcmd + shift - h : yabai -m window --swap west; sleep 0,1; zsh ~/.ToggleLang.sh 
lcmd + shift - l : yabai -m window --swap east; sleep 0.1; zsh ~/.ToggleLang.sh
lcmd + shift - j : yabai -m window --swap south; sleep 0.1; zsh ~/.ToggleLang.sh
lcmd + shift - k : yabai -m window --swap north; sleep 0.1; zsh ~/.ToggleLang.sh
lcmd - 1 : yabai -m space --focus 1; yabai -m window --focus west
lcmd - 2 : yabai -m space --focus 2; yabai -m window --focus west
lcmd - 3 : yabai -m space --focus 3; yabai -m window --focus west
lcmd - 4 : yabai -m space --focus 4; yabai -m window --focus west
lcmd - 5 : yabai -m space --focus 5; yabai -m window --focus west
lcmd - 6 : yabai -m space --focus 6; yabai -m window --focus west
lcmd - 7 : yabai -m space --focus 7; yabai -m window --focus west
lcmd - 8 : yabai -m space --focus 8; yabai -m window --focus west
lcmd - 9 : yabai -m space --focus 9; yabai -m window --focus west
lcmd + shift - 1 : yabai -m window --space 1; sh ~/.CloseEmptySpaces.sh; yabai -m space --focus 1; yabai -m window --focus west
lcmd + shift - 2 : yabai -m space --create; sleep 0.1; yabai -m window --space 2; sh ~/.CloseEmptySpaces.sh; yabai -m space --focus 2; yabai -m window --focus west
lcmd + shift - 3 : yabai -m space --create; sleep 0.1; yabai -m window --space 3; sh ~/.CloseEmptySpaces.sh; yabai -m space --focus 3; yabai -m window --focus west
lcmd + shift - 4 : yabai -m space --create; sleep 0.1; yabai -m window --space 4; sh ~/.CloseEmptySpaces.sh; yabai -m space --focus 4; yabai -m window --focus west
lcmd + shift - 5 : yabai -m space --create; sleep 0.1; yabai -m window --space 5; sh ~/.CloseEmptySpaces.sh; yabai -m space --focus 5; yabai -m window --focus west
lcmd + shift - 6 : yabai -m space --create; sleep 0.1; yabai -m window --space 6; sh ~/.CloseEmptySpaces.sh; yabai -m space --focus 6; yabai -m window --focus west
